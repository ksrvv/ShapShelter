@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
   <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navig">
        <li class="without-marker">
           
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Выход</a>
       
        </li>
    </ul>
  
}
else
{
        <ul class="navig">
        <li class="without-marker">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Вход</a>
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрация админа</a>
        </li>
        </ul>
  
}

